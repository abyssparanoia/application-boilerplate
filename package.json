{
  "name": "boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "lerna run start --stream",
    "build": "lerna run build --include-dependencies",
    "lint": "eslint --fix -c ./.eslintrc.json './packages/**/*.{ts,tsx}'",
    "test": "lerna run test",
    "clean": "lerna run clean && lerna clean --y",
    "swagger:generate": "openapi-generator generate -i ./swagger/reference/api.v1.yaml -g typescript-axios -o ./packages/httpclient"
  },
  "devDependencies": {
    "@types/jest": "28.1.8",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "concurrently": "7.6.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.37.1",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "8.0.3",
    "jest": "28.1.3",
    "lerna": "5.6.2",
    "lint-staged": "13.3.0",
    "nodemon": "2.0.22",
    "npm-run-all2": "5.0.2",
    "prettier": "2.8.8",
    "rimraf": "3.0.2",
    "serve": "13.0.4",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.7.4",
    "wait-on": "6.0.1"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{.ts,tsx}": [
      "eslint --fix -c ./.eslintrc.json",
      "git add"
    ]
  }
}
